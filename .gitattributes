# Exclude Xcode project files from language statistics
*.pbxproj linguist-generated=true

# Exclude Xcode workspace and scheme files
*.xcworkspace/** linguist-generated=true
*.xcscheme linguist-generated=true
*.xcworkspacedata linguist-generated=true

# Exclude iOS build and configuration files
*.xcconfig linguist-generated=true
ios/Flutter/** linguist-generated=true
ios/Pods/** linguist-vendored=true

# Force Dart detection for Dart files
*.dart linguist-language=Dart
*.dart linguist-vendored=false

# Exclude generated Dart files
*.g.dart linguist-generated=true
*.freezed.dart linguist-generated=true

# Exclude build and cache directories
build/** linguist-generated=true
.dart_tool/** linguist-generated=true

# Exclude Flutter plugins
.flutter-plugins* linguist-generated=true

# Exclude IDE and editor files
.idea/** linguist-vendored=true
.vscode/** linguist-vendored=true

# Set YAML files language
*.yaml linguist-language=YAML

# Exclude documentation files
*.md linguist-documentation=true
*.txt linguist-documentation=true
doc/** linguist-documentation=true

# Ignore Makefile detection entirely
Makefile linguist-detectable=false
*.mk linguist-detectable=false